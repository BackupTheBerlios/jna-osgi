<?xml version="1.0" encoding="UTF-8"?>
<project name="JNA" default="default" basedir=".">

   <property name="destfile" value="./${destDir}/${targetName}.jar"/>

   <target name="createOsgiManifest">
      <echo>${destfile}</echo>
      <jar destfile="${destfile}">
         <zipfileset includes="**/*" src="dist/jna.jar"/>
         <manifest>
           <attribute name="Export-Package" value='com.sun.jna;version="3.2.3",com.sun.jna.darwin;version="3.2.3",com.sun.jna.ptr;version="3.2.3";uses:="com.sun.jna",com.sun.jna.win32;version="3.2.3";uses:="com.sun.jna"'/>
           <attribute name="Ant-Version" value="${ant.version}"/>
           <attribute name="Manifest-Version" value="1.0"/>
           <attribute name="Bundle-Vendor" value="NTS"/>
           <attribute name="Bundle-Version" value="3.2.7" />
           <attribute name="Bundle-Name"  value="Java Native Access (JNA)"/>
           <attribute name="Bundle-SymbolicName" value="com.springsource.com.sun.jna"/>
           <attribute name="Main-Class" value="com.sun.jna.Native"/>
         </manifest>
      </jar>
   </target>

   
</project>